@model PNTProyecto.Models.Usuario

@{
    ViewData["Title"] = "Details";
    var currentUserId = ViewBag.UserId; // Asegúrate de que esta variable esté correctamente seteada en tu controlador
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (Model.UsuarioId == currentUserId)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
    </dl>
</div>
<div>
    @if (Model.UsuarioId == currentUserId)
    {
        <a asp-action="Edit" asp-route-id="@Model.UsuarioId">Edit</a>
    }
</div>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #1a1a1a; /* Color de fondo oscuro */
        color: #eee; /* Color de texto claro */
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #4CAF50; /* Color del título principal */
    }

    h4 {
        color: #ccc; /* Color del subtítulo */
    }

    hr {
        border-color: #444; /* Color de la línea divisoria */
        margin-top: 10px;
        margin-bottom: 20px;
    }

    .row {
        margin-left: -15px;
        margin-right: -15px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #4CAF50; /* Color de las etiquetas de la definición */
    }

    .col-sm-10 {
        margin-bottom: 10px;
    }

    a {
        color: #4CAF50; /* Color del enlace */
        margin-right: 10px;
    }

        a:hover {
            text-decoration: none;
            color: #45a049; /* Color del enlace al pasar el mouse */
        }
</style>