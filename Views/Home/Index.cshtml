@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a; /* Color de fondo oscuro */
            color: #eee; /* Color de texto claro */
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #4CAF50; /* Color del título principal */
        }

        .navbar-text {
            color: #ccc; /* Color del texto de bienvenida */
            margin-right: 10px;
        }

        .nav-item {
            display: inline-block;
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #4CAF50; /* Color de fondo del botón primario */
            color: #fff; /* Color del texto del botón primario */
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-primary:hover {
                opacity: 0.8; /* Cambia la opacidad al pasar el mouse */
            }

        .nav-link {
            color: #4CAF50; /* Color del enlace de navegación */
            text-decoration: none;
            margin-right: 10px;
        }

            .nav-link:hover {
                text-decoration: underline; /* Subrayado del enlace de navegación al pasar el mouse */
            }

        .auth-buttons {
            margin-top: 20px;
        }

            .auth-buttons a {
                color: #4CAF50; /* Color del texto de los enlaces de autenticación */
                margin-right: 10px;
            }

            .auth-buttons button {
                background-color: #4CAF50; /* Color de fondo de los botones de autenticación */
                color: #fff; /* Color del texto de los botones de autenticación */
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .auth-buttons button:hover {
                    opacity: 0.8; /* Cambia la opacidad al pasar el mouse */
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Home Page</h1>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="auth-info">
                <span class="navbar-text">Welcome, @User.Identity.Name!</span>
                <a class="nav-link" href="Publicaciones/index">Ir a la página principal</a>
                <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
            </div>
        }
        else
        {
            <div class="auth-buttons">
                <a href="Usuarios/Create">Registro:</a>
                <button id="btnRegistrarse" class="btn btn-primary">Registrarse</button>
            </div>
            <div class="auth-buttons">
                <a>Login:</a>
                <button id="btnLogin" class="btn btn-primary">Login</button>
            </div>
        }
    </div>

    <script>
        // Redirige al registro
        document.getElementById('btnRegistrarse').addEventListener('click', function () {
            window.location.href = 'Usuarios/Create';
        });

        // Redirige al login
        document.getElementById('btnLogin').addEventListener('click', function () {
            window.location.href = 'Account/Login';
        });
    </script>
</body>
</html>
