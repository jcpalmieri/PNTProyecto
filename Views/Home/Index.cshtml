@{
    ViewData["Title"] = "Home Page";
}

<div>
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text">Welcome, @User.Identity.Name!</span>
        <li class="nav-item">
            <a class="nav-link btn btn-primary" href="Publicaciones/index">Ir a la página principal</a>
        </li>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
        </li>
    } else {
        <div>
             <a>Registro:</a>
            <button id="btnRegistrarse" class="btn btn-primary btn-lg">Registrarse</button>
        </div>
        <div>
            <a>Login:</a>
            <button id="btnLogin" class="btn btn-primary btn-lg">Login</button>
        </div>
    }
    


@section Scripts {
    <script>
        // va para el registro
        document.getElementById('btnRegistrarse').addEventListener('click', function() {
            window.location.href = 'Usuarios/Create'; 
        });

        // Va para el login
        document.getElementById('btnLogin').addEventListener('click', function() {
            window.location.href = 'Account/Login'; 
        });
    </script>
}

