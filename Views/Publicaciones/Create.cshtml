<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="nombreMascota" class="control-label"></label>
        <input asp-for="nombreMascota" class="form-control" />
        <span asp-validation-for="nombreMascota" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="descripcion" class="control-label"></label>
        <textarea asp-for="descripcion" class="form-control"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="foto" class="control-label"></label>
        <input asp-for="foto" type="file" class="form-control" />
        <span asp-validation-for="foto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
