@model PNTProyecto.Models.Publicacion

@{
    ViewData["Title"] = "Detalles de la Publicación";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Detalles de la Publicación</h4>
    <hr />
    <div class="row">
        <div class="col-sm-2">IdPublicacion: @Model.nroPublicacion</div>
        <div class="col-sm-10">@Model.nombreMascota</div>
        <div class="col-sm-2">Imagen:</div>
        <div class="col-sm-10">
            <img src="~/@Model.imagen" style="max-width: 25%;" /> 
        </div>
        <div class="col-sm-2">Descripción:</div>
        <div class="col-sm-10">@Model.descripcion</div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>



