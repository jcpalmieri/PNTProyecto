    }

    h2 {
        color: #4CAF50; /* Color del título */
        margin-bottom: 20px;
    }

    h4 {
        color: #ccc; /* Color del subtítulo */
    }

    hr {
        border-color: #444; /* Color de la línea divisoria */
        margin-top: 10px;
        margin-bottom: 20px;
    }

