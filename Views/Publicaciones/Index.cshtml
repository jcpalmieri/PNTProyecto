@model IEnumerable<PNTProyecto.Models.Publicacion>

    @{
    ViewData["Title"] = "Publicaciones";
    }

    <h1>Paticas&Corazones</h1>

    <div class="filter-bar">
        <input type="text" placeholder="Filtro De Busqueda" class="filter-input" />
        <button class="profile-button">Funciones de perfil</button>
    </div>

    <div class="publicaciones-grid">
        @foreach (var item in Model)
    {
        <div class="publicacion-card">
            <button type="button" class="publicacion-button" onclick="redirectToDetails('@item.nroPublicacion')">
                <h2>@item.nombreMascota</h2>
                <img src="@Url.Content("~/"+item.Imagen)" alt="@item.nombreMascota" class="publicacion-image" />
                <p>@item.descripcion</p>
            </button>
            <script>
            // este sp lo que va a hacer es redirigirte al details.
                   function redirectToDetails(nroPublicacion) {
                    window.location.href = '/Publicaciones/Details/' + nroPublicacion;
                }</script>
        </div>


    }
    </div>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1 {
            color: #4CAF50;
            text-align: center;
            margin-top: 20px;
        }

        .filter-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
            margin-top: 10px;
        }

        .filter-input {
            padding: 10px;
            font-size: 16px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .profile-button {
            padding: 10px;
            font-size: 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .profile-button:hover {
                background-color: #45a049;
            }

        .publicaciones-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
            padding: 16px;
            background-color: #DDA0DD;
            margin: 0 auto;
            flex: 1;
        }

        .publicacion-card {
            background-color: #E6E6FA;
            padding: 16px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .publicacion-card:hover {
                transform: scale(1.05);
            }

            .publicacion-card h2 {
                color: #4CAF50;
            }

        .publicacion-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .publicacion-card p {
            margin-top: 10px;
            color: #555;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
