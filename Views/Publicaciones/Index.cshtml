@model IEnumerable<PNTProyecto.Models.Publicacion>

    @{
    ViewData["Title"] = "Publicaciones";
    }

    @if (User.Identity.IsAuthenticated)
{
    <p>User is logged in</p>
}
else
{
    <p>User is not logged in</p>
}

    <header class="banner">
        <h1>Paticas&Corazones</h1>
    </header>

    <div class="filter-bar-container">
        <div class="filter-bar">
            <select id="Filtro de Búsqueda" onchange="seleccionarFiltro()">
                <option value="">Filtro de Búsqueda</option>
                <option value="perro">Perro</option>
                <option value="gato">Gato</option>
                <option value="ave">Ave</option>
                <option value="pez">Pez</option>
            </select>
        </div>
        <div class="filter-bar">
            <select id="Opciones de Usuario" onchange="handleUserOptionsChange()">
                <option value="">Opciones de Usuario</option>
                <option value="registrarse">Registrarse</option>
                <option value="Crear Publicacion">Crear Publicacion</option>
            </select>
        </div>
    </div>

    <div class="publicaciones-grid">
        @foreach (var item in Model)
    {
        <div class="publicacion-card">
            <button type="button" class="publicacion-button" onclick="redirectToDetails('@item.nroPublicacion')">
                <h2>@item.NombreMascota</h2>
                <img src="@item.Imagen" alt="@item.NombreMascota" style="max-width: 100px;" />
                <p>@item.Descripcion</p>
            </button>
        </div>
    }
    </div>

    <footer class="footer"></footer>

    @section Scripts {
        <script>
            function redirectToDetails(nroPublicacion) {
                window.location.href = '/Publicaciones/Details/' + nroPublicacion;
            }

            function handleUserOptionsChange() {
                var userOptions = document.getElementById('Opciones de Usuario');
                if (userOptions.value === 'registrarse') {
                    window.location.href = 'Usuarios/Create';
                } else if (userOptions.value === 'Crear Publicacion') {
                    window.location.href = 'Publicaciones/Create';
                }
            }
        </script>

        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #333;
                color: #fff;
            }

            .banner {
                background-color: #444;
                text-align: center;
                padding: 20px;
            }

            .filter-bar-container {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 10px;
            }

            .filter-bar {
                margin-right: 10px;
            }

                .filter-bar select {
                    padding: 8px;
                    font-size: 16px;
                    background-color: #555;
                    color: #fff;
                    border: none;
                    border-radius: 4px;
                }

            .publicaciones-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 16px;
                padding: 16px;
                justify-items: center; 
            }

            .publicacion-card {
                background-color: #666;
                padding: 16px;
                border-radius: 8px;
                text-align: center;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                transition: transform 0.2s;
                max-width: 300px; 
                width: 100%;
            }

                .publicacion-card:hover {
                    transform: scale(1.05);
                }

                .publicacion-card h2 {
                    color: #4CAF50;
                }

                .publicacion-card img {
                    max-width: 100%;
                    height: auto;
                    border-radius: 8px;
                }

                .publicacion-card p {
                    margin-top: 10px;
                    color: #fff;
                }

            .action-links {
                margin-top: 10px;
            }

            .footer {
                background-color: #444;
                color: #fff;
                text-align: center;
                padding: 10px 0;
                position: relative;
                bottom: 0;
                width: 100%;
            }
        </style>
    }
