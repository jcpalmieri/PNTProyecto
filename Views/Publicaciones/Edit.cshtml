@model PNTProyecto.Models.Publicacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Publicacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="nroPublicacion" />
            <div class="form-group">
                <label asp-for="nombreMascota" class="control-label"></label>
                <input asp-for="nombreMascota" class="form-control" />
                <span asp-validation-for="nombreMascota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imagen" class="control-label"></label>
                <input type="file" id="imagenFile" name="imagenFile" class="form-control" accept="image/*" />
                <span asp-validation-for="imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
