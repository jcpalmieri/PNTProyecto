<!DOCTYPE html>
<html>
<head>
    <title>Perfil de Usuario</title>
</head>
<body>
    <div class="container">
        <h1>Perfil de Usuario</h1>

        <div id="userDetails" class="user-details">
            <p>Cargando...</p>
        </div>

        <form id="misPublicacionesForm" method="get" action="/Publicaciones/MisPublicaciones" style="display: none;">
            <input type="hidden" id="usuarioIdInput" name="usuarioId" />
            <div class="button-container">
                <button type="submit">Ver mis publicaciones</button>
            </div>
        </form>
    </div>

    <script>
        async function getUserDetails() {
            const identifier = '@User.Identity.Name';

            try {
                const response = await fetch(`/Usuarios/DetailsByEmailOrUsername/${identifier}`);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                const userDetailsDiv = document.getElementById('userDetails');
                userDetailsDiv.innerHTML = `
                    <p><strong>Nombre de usuario:</strong> ${identifier}</p>
                    <p><strong>Email:</strong> ${data.email}</p>
                    <p><strong>Telefono:</strong> ${data.telefono}</p>
                    <p><strong>UsuarioId:</strong> ${data.usuarioId}</p>
                `;

                const usuarioIdInput = document.getElementById('usuarioIdInput');
                usuarioIdInput.value = data.usuarioId;

                const form = document.getElementById('misPublicacionesForm');
                form.style.display = 'block';
            } catch (error) {
                console.error('Error fetching user details:', error);
                document.getElementById('userDetails').innerHTML = 'Error fetching user details';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            getUserDetails();
        });
    </script>
</body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #1a1a1a; /* Color de fondo oscuro */
        color: #eee; /* Color de texto claro */
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #4CAF50; /* Color del título principal */
    }

    .user-details {
        background-color: #333; /* Color de fondo del contenedor de detalles de usuario */
        padding: 20px;
        border-radius: 8px;
        margin-top: 20px;
    }

        .user-details p {
            margin-bottom: 10px;
        }

        .user-details strong {
            color: #4CAF50; /* Color del texto en negrita */
        }

    form {
        margin-top: 20px;
    }

    .button-container {
        text-align: center;
        margin-top: 10px;
    }

    button {
        background-color: #4CAF50; /* Color de fondo del botón */
        color: #fff; /* Color del texto del botón */
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049; /* Color de fondo del botón al pasar el mouse */
        }
</style>